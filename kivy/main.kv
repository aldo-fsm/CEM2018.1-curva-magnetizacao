#: import Button kivy.uix.button

<ScreenManager>:
    MainScreen:
        id: main_screen
        name: 'main_screen'
        screen_manager: root
        BoxLayout:
            orientation: 'vertical'
            background_color: 255, 255, 255, 1
            Label:
                text: 'Curva da Corrente de Excitação'
                pos_hint: {'center_x': 0.5}
                size_hint: (0.1,None)
                font_size: 20
            Image:
                source: 'resources/img/Circuito Magnético.jpg'
                size_hint: (0.5,0.5)
            # Spinner:
            #     text: "Work"
            #     values: "resources/bh_curves_data/Castings-Cast-Iron.xls", "resources/bh_curves_data/Electrical-Steel-NGO-35PN250.xls", "resources/bh_curves_data/Low-Carbon-Steel-SAE1020.xls"
            #     size_hint: (None, None)
            #     on_press: print('oi')
            Button:
                text: 'Plotar'
                size_hint: (0.1,0.1)
                pos_hint: {'center_x': 0.5, 'bottom': 0.1}
                on_press: main_screen.plot()
    PlotScreen:
        id: plot_screen
        name: 'plot_screen'
        screen_manager: root
        graph_container: graph_container
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint: (1, 0.1)
                    orientation: 'horizontal'
                    # Spinner:
                    #     text: "Work"
                    #     values: "Work", "Home", "Mobile", "Skype"
                    #     size_hint: (None, None)
                    #     on_press: print('oi')
                    Button:
                        text: 'Castings Cast Iron'
                        on_press: plot_screen.plot('resources/bh_curves_data/Castings-Cast-Iron.xls')
                    Button:
                        text: 'Electrical Steel NGO 35PN250'
                        on_press: plot_screen.plot('resources/bh_curves_data/Electrical-Steel-NGO-35PN250.xls')
                    Button:
                        text: 'Low Carbon Steel SAE1020'
                        on_press: plot_screen.plot('resources/bh_curves_data/Low-Carbon-Steel-SAE1020.xls')
                BoxLayout:
                    id: graph_container
